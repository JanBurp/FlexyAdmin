# Nice urls
RewriteEngine on
RewriteCond $1 !^(index\.php|site/assets|sys/flexyadmin/assets|sys/tinymce|sys/jquery|sitemap\.xml|robots\.txt|sys/__test)
RewriteRule ^(.*)$ index.php/$1 [L]

